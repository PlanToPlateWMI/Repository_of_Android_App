<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaneToPlate_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_gray</item>
        <item name="colorPrimaryVariant">@color/zam_blue_1</item>
        <item name="colorOnPrimary">@color/zam_blue_2</item>
        <item name="colorOnTertiary">@color/zam_blue_0</item>


        <item name="colorOnBackground">@color/zam_lista_color</item>
        <item name="colorTertiary">@color/zam_baza_color</item>
        <item name="colorOnError">@color/zam_spizarnia_color</item>

        <item name="colorError">@color/red_dark</item>

        <item name="android:editTextColor">@color/gray</item>
        <item name="android:textColorHint">@color/gray</item>

        <item name="colorOnPrimaryFixed">@color/item_n</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/zam_blue_3</item>
        <item name="colorSecondaryVariant">@color/zam_black_gray</item>
        <item name="colorOnSecondary">@color/gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
</resources>