<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_0"
    tools:context=".Email_confirmation">

    <!-- PlanToPlate -->
    <TextView
        android:id="@+id/plantoplate"
        android:layout_width="182dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="134dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="626dp"
        android:gravity="top"
        android:text="@string/plantoplate"
        android:textAppearance="@style/plantoplate"
        android:textColor="@color/black_gray"
        android:fontFamily="@font/Quicksand_SemiBold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Potwierdzenie e-maila -->
    <TextView
        android:id="@+id/potwierdzen"
        android:layout_width="273dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="219dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="548dp"
        android:text="@string/potwierdzen"
        android:textAppearance="@style/potwierdzen"
        android:fontFamily="@font/Quicksand_Medium"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- Skorzystaj z linku w wiadomości e-mail, aby zweryfikować swój adres e-mail -->
    <TextView
        android:id="@+id/skorzystaj_"
        android:layout_width="271dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="44dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="297dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="383dp"
        android:text="@string/skorzystaj_"
        android:textAppearance="@style/skorzystaj_"
        android:fontFamily="@font/Quicksand_Medium"
        android:gravity="center_horizontal|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!-- Uwaga! Do czasu potwierdzenia maila wejście nie będzie możliwe! -->
    <TextView
        android:id="@+id/uwaga_do_cz"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="53dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="53dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="536dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="224dp"
        android:text="@string/uwaga_do_cz"
        android:textAppearance="@style/uwaga_do_cz"
        android:fontFamily="@font/Quicksand_Regular"
        android:gravity="center_horizontal|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!--    app:layout_constraintBottom_toBottomOf="parent"-->
    <!--    app:layout_constraintEnd_toEndOf="parent"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <!--    app:layout_constraintTop_toTopOf="parent"-->

</androidx.constraintlayout.widget.ConstraintLayout>