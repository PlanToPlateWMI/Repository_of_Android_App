<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorOnTertiary"
    tools:context="pl.plantoplate.ui.main.recepies.RecipeFragment">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints">

        <HorizontalScrollView
            android:id="@+id/hscroll"
            android:layout_width="fill_parent"
            android:layout_height="50dp">

            <pl.plantoplate.ui.customViewes.RadioGridGroup
                android:id="@+id/radio_group_recipe"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="2dp"
                android:columnCount="4"
                android:orientation="horizontal"
                android:rowCount="1"

                app:layout_constraintBottom_toTopOf="@+id/kalendarz_przep"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <RadioButton
                    android:id="@+id/wszystkie"
                    android:layout_width="91dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/state_list_button_recipe_category"
                    android:button="@null"
                    android:clickable="true"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Wszystko"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textOff="@string/produkty_mleczne"
                    android:textOn="@string/produkty_mleczne"
                    android:textSize="16dp"
                    app:rippleColor="?attr/colorOnPrimaryFixed" />

                <RadioButton
                    android:id="@+id/napoje"
                    android:layout_width="91dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/state_list_button_recipe_category"
                    android:button="@null"
                    android:clickable="true"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Napoje"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textOff="@string/produkty_mleczne"
                    android:textOn="@string/produkty_mleczne"
                    android:textSize="16dp"
                    app:rippleColor="?attr/colorOnPrimaryFixed" />

                <RadioButton
                    android:id="@+id/zupy"
                    android:layout_width="91dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/state_list_button_recipe_category"
                    android:button="@null"
                    android:clickable="true"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Zupy"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textOff="@string/produkty_mleczne"
                    android:textOn="@string/produkty_mleczne"
                    android:textSize="16dp"
                    app:rippleColor="?attr/colorOnPrimaryFixed" />

                <RadioButton
                    android:id="@+id/desery"
                    android:layout_width="91dp"
                    android:layout_height="36dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/state_list_button_recipe_category"
                    android:button="@null"
                    android:clickable="true"
                    android:fontFamily="@font/quicksand_medium"
                    android:gravity="center_horizontal|center_vertical"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="Desery"
                    android:textAllCaps="false"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textOff="@string/produkty_mleczne"
                    android:textOn="@string/produkty_mleczne"
                    android:textSize="16dp"
                    app:rippleColor="?attr/colorOnPrimaryFixed" />

<!--                <RadioButton-->
<!--                    android:id="@+id/dania_miesne"-->
<!--                    android:layout_width="91dp"-->
<!--                    android:layout_height="36dp"-->
<!--                    android:layout_margin="4dp"-->
<!--                    android:background="@drawable/state_list_button_calendar"-->
<!--                    android:button="@null"-->
<!--                    android:clickable="true"-->
<!--                    android:fontFamily="@font/quicksand_medium"-->
<!--                    android:gravity="center_horizontal|center_vertical"-->
<!--                    android:insetTop="0dp"-->
<!--                    android:insetBottom="0dp"-->
<!--                    android:text="MiÄ™sne"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:textColor="?attr/colorSecondaryVariant"-->
<!--                    android:textOff="@string/produkty_mleczne"-->
<!--                    android:textOn="@string/produkty_mleczne"-->
<!--                    android:textSize="16dp"-->
<!--                    app:rippleColor="?attr/colorOnPrimaryFixed" />-->

            </pl.plantoplate.ui.customViewes.RadioGridGroup>
        </HorizontalScrollView>

    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/kalendarz_przep"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scroll"
        app:layout_constraintVertical_bias="0.0">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/kal_przep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>