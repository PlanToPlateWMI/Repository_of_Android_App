<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.plantoplate.ui.main.settings.SettingsFragment"
    android:background="@color/blue_0">

    <!-- TODO: Update blank fragment layout -->
    <!--Uastawienia -->
    <TextView
        android:id="@+id/ustawienia"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="105dp"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="top"
        android:text="@string/ustawienia"
        android:textAppearance="@style/plantoplate"
        android:textColor="@color/black_gray" />

    <!--Wygenerowanie kodu button -->
    <Button
        android:id="@+id/button_wygenerowanie_kodu"
        android:layout_width="410dp"
        android:layout_height="77dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="190dp"
        android:backgroundTint="@color/blue_1"
        android:clickable="true"
        android:drawableLeft="@drawable/key_24_50"
        android:drawableRight="@drawable/arrow_forward_ios_24_50"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="left|center_vertical"
        android:text="Wygenerowanie kodu"
        android:textAllCaps="false"
        android:textColor="@color/black_gray"
        app:iconPadding="8dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintVertical_bias="0.162"
        app:rippleColor="@color/blue_1" />

    <!--Zmiana danych button-->
    <Button
        android:id="@+id/button_zmiana_danych"
        android:layout_width="410dp"
        android:layout_height="77dp"
