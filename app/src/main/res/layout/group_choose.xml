<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_0"
    tools:context="pl.plantoplate.Group_Choose">

    <!-- PlanToPlate -->
    <TextView
        android:id="@+id/plantoplate"
        android:layout_width="182dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/quicksand_semibold"
        android:gravity="top"
        android:text="@string/plantoplate"

        app:strokeColor="@color/blue_2"
        app:strokeWidth="1dp"

        android:textAppearance="@style/plantoplate"
        android:textColor="@color/black_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />


    <!-- Pomyslnie zarejestrowano -->

    <!-- Wybierz jednÄ… z opcji: -->
    <TextView
        android:id="@+id/pom_zarejestrowano"
        android:layout_width="324dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="top"
        android:text="@string/pomy_lnie_z"
        android:textAppearance="@style/pomy_lnie_z"
        android:textColor="@color/black_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantoplate"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/wybierz_opcje"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="center_horizontal|top"
        android:text="@string/wybierz_jadna_opcje"
        android:textAppearance="@style/wprowad_kod"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pom_zarejestrowano"
        app:layout_constraintVertical_bias="0.095" />

    <!--Zatwierdz button -->
    <Button
        android:id="@+id/button_mam_zaproszenie"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/blue_1"
        android:clickable="true"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/mam_zapr_do_gr"
        android:textAllCaps="false"
        android:textColor="@color/black_gray"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wybierz_opcje"
        app:layout_constraintVertical_bias="0.587"
        app:layout_constraintHorizontal_bias="0.497"
        app:rippleColor="@color/blue_1" />

    <!--Swoja gruppa button -->
    <Button
        android:id="@+id/button_swoja_grupa"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:backgroundTint="@color/blue_1"
        android:clickable="true"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/swoja_gr"
        android:textAllCaps="false"
        android:textColor="@color/black_gray"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mam_zaproszenie"
        app:layout_constraintVertical_bias="0.600"
        app:rippleColor="@color/blue_1" />


    <TextView
        android:id="@+id/podpowiedz_grupa"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:fontFamily="@font/quicksand_medium"

        android:gravity="center_horizontal|center_vertical"
        android:text="@string/podpowiedz_gr"
        android:textAppearance="@style/masz_konto_"
        android:textColor="@color/black_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <!--    app:layout_constraintBottom_toBottomOf="parent"-->
    <!--    app:layout_constraintEnd_toEndOf="parent"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <!--    app:layout_constraintTop_toTopOf="parent"-->
</androidx.constraintlayout.widget.ConstraintLayout>