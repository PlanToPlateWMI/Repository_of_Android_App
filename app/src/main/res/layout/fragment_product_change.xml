    <RadioGroup
        android:id="@+id/toggle_group"
        android:layout_width="363dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/button_zatwierdz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/baza_produktow"
        app:layout_constraintVertical_bias="0.966">

        <RadioButton
            android:id="@+id/button_szt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="11dp"
            android:background="@drawable/state_list_button"
            android:button="@null"
            android:clickable="true"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="SZT"
            android:textAllCaps="false"
            android:textColor="@color/black_gray"
            android:textOff="@string/szt"
            android:textOn="@string/szt"
            android:textSize="13dp"
            app:iconPadding="8dp"
            app:rippleColor="@color/blue_1" />

        <RadioButton
            android:id="@+id/button_l"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="11dp"
            android:background="@drawable/state_list_button"
            android:button="@null"
            android:clickable="true"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="L"
            android:textAllCaps="false"
            android:textColor="@color/black_gray"
            android:textOff="@string/l"
            android:textOn="@string/l"
            android:textSize="13dp"
            app:iconPadding="8dp"
            app:rippleColor="@color/blue_1" />

        <RadioButton
            android:id="@+id/button_kg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="11dp"
            android:background="@drawable/state_list_button"
            android:button="@null"
            android:clickable="true"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="KG"
            android:textAllCaps="false"
            android:textColor="@color/black_gray"
            android:textOff="@string/kg"
            android:textOn="@string/kg"
            android:textSize="13dp"
            app:iconPadding="8dp"
            app:rippleColor="@color/blue_1" />

        <RadioButton
            android:id="@+id/button_gr"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="11dp"
            android:background="@drawable/state_list_button"
            android:button="@null"
            android:clickable="true"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center_horizontal|center_vertical"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:padding="16dp"
            android:text="GR"
            android:textAllCaps="false"
            android:textColor="@color/black_gray"
            android:textOff="@string/gr"
            android:textOn="@string/gr"
            android:textSize="13dp"
            app:iconPadding="8dp"
            app:rippleColor="@color/blue_1" />

    </RadioGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enter_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="238dp"
        android:layout_height="65dp"
        android:fontFamily="@font/quicksand_regular"
        android:hint="@string/nazwa_produktu"

        android:textColorHint="@color/black_gray"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/blue_2"

        app:hintTextColor="@color/black_gray"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/baza_text"
        app:layout_constraintVertical_bias="0.053">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enter_the_name"
            android:layout_width="238dp"
            android:layout_height="56dp"

            android:fontFamily="@font/quicksand_regular"

            android:maxLines="1"
            android:singleLine="true"

            android:textColor="@color/black_gray"

            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="321dp" />
    </com.google.android.material.textfield.TextInputLayout>

