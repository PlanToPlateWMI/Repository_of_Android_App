<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRecipeItemInCalendar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="182dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="191dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/rounded_recipe_in_calendar"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="0dp"
            android:backgroundTint="?attr/colorBackgroundFloating"
            android:elevation="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iconUncheck_kupione"

                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="0dp"
                android:contentDescription="TODO"

                android:paddingLeft="0dp"
                android:paddingTop="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/noimage" />

            <TextView
                android:id="@+id/wegeText"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                android:background="@drawable/rounded_baza"
                android:ellipsize="end"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:maxLines="1"
                android:visibility="visible"
                android:singleLine="true"
                android:text="Wege"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="12dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="Nazwa przepisu"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="-6dp"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center"
            android:text="Czas ugotowania"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="16dp"/>

    </LinearLayout>


</LinearLayout>