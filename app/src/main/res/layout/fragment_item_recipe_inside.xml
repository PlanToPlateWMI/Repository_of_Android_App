<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/recipeImage"

        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="TODO"

        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/noimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/menuButtonTest"

        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:contentDescription="TODO"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/more_vert_24_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.981"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/menuButton"

        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:contentDescription="TODO"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/more_vert_24_50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        tools:ignore="MissingConstraints" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView"

            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:layout_margin="0dp"
            android:backgroundTint="?attr/colorOnTertiaryFixed"
            android:elevation="0dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/linearlayout"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="0dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textNazwaPrzepisu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand_regular"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="Nazwa przepisu"
                    android:textColor="?attr/colorSecondaryVariant"
                    android:textSize="22dp" />

                <pl.plantoplate.ui.customViews.RadioGridGroup
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="80dp"
                    android:columnCount="3"
                    android:rowCount="2">

                    <ImageView
                        android:id="@+id/time"

                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="6dp"

                        android:contentDescription="TODO"

                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/access_time_24_50"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.212"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintVertical_bias="0.051"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/count"

                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="40dp"

                        android:contentDescription="TODO"

                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/person_outline_24_50"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.261"
                        app:layout_constraintStart_toEndOf="@+id/time"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintVertical_bias="0.053"
                        tools:ignore="MissingConstraints" />

                    <ImageView
                        android:id="@+id/level"

                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="40dp"

                        android:contentDescription="TODO"

                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/level_24_50"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.44"
                        app:layout_constraintStart_toEndOf="@+id/count"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        app:layout_constraintVertical_bias="0.051"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/timeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:ellipsize="end"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:text="10 min"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/personText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="44dp"

                        android:ellipsize="end"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:text="4 os."
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/levelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="38dp"

                        android:ellipsize="end"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:text="Łatwy"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textSize="14dp" />

                </pl.plantoplate.ui.customViews.RadioGridGroup>

                <pl.plantoplate.ui.customViews.RadioGridGroup
                    android:id="@+id/radio_group_recipe_inside"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"

                    android:layout_gravity="center"

                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:rowCount="1"

                    app:layout_constraintBottom_toTopOf="@+id/search"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/searchtext"
                    app:layout_constraintVertical_bias="0.0">

                    <RadioButton
                        android:id="@+id/skladniki_button"
                        android:layout_width="120dp"
                        android:layout_height="36dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/state_list_button_recipe_inside"
                        android:button="@null"
                        android:clickable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center_horizontal|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Składniki"
                        android:textAllCaps="false"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textOff="@string/produkty_mleczne"
                        android:textOn="@string/produkty_mleczne"
                        android:textSize="16dp"
                        app:rippleColor="?attr/colorOnPrimaryFixed" />

                    <RadioButton
                        android:id="@+id/przepis_button"
                        android:layout_width="120dp"
                        android:layout_height="36dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/state_list_button_recipe_inside"
                        android:button="@null"
                        android:clickable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center_horizontal|center_vertical"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:text="Przepis"
                        android:textAllCaps="false"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textOff="@string/produkty_miesne"
                        android:textOn="@string/produkty_miesne"
                        android:textSize="16dp"
                        app:rippleColor="?attr/colorOnPrimaryFixed" />

                </pl.plantoplate.ui.customViews.RadioGridGroup>

                <ImageView
                    android:id="@+id/question"

                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="20dp"

                    android:layout_marginTop="-10dp"

                    android:clickable="true"

                    android:contentDescription="TODO"

                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/question_mark_24_50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.44"
                    app:layout_constraintStart_toEndOf="@+id/count"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.051"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/question_fake"

                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="6dp"

                    android:layout_marginTop="-40dp"

                    android:clickable="true"

                    android:contentDescription="TODO"

                    android:paddingLeft="0dp"
                    android:paddingTop="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/question_mark_24_50"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.44"
                    app:layout_constraintStart_toEndOf="@+id/count"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    app:layout_constraintVertical_bias="0.051"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rec_inside_def"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="184dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radio_group_recipe_inside"
                app:layout_constraintVertical_bias="0.0">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerRecipeInside"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="0dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>